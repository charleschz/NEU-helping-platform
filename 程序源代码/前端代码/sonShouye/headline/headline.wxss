/* pages/sonShouye/headline/headline.wxss */

.title {
  width: 100%;
  height: 80rpx;
  background-color: #f3f3f3;
  text-align: center;
  line-height: 80rpx;
  font-size: 50rpx;
}
.headline-block {
  margin-top: 20rpx;
  width: 100%;
  height: 300rpx;
  display: flex;
  justify-content: space-between;
}
.headline-item {
  padding-top: 20rpx;
  height: 300rpx;
  width: 100%;
  background-color: #f3f3f3;
  display: flex;
  border-top-width: 1rpx;
  border-top-color: #999;
  border-top-style: solid;
  padding-bottom: 20rpx;
}
.headline-image {
  width: 400rpx;
  height: 300rpx;
  margin-left: 20rpx;
}
.headline-cont {
  margin-left: 20rpx;
  display: flex;
  flex-direction: column;
  overflow: hidden;
  text-overflow: ellipsis;
  width: 340rpx;
}
.article-title {
  font-weight: 500;
  font-size: 40rpx;
  
}